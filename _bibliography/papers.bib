@article{albrecht2025,
  title = {Resting-State Functional near-Infrared Spectroscopy in Neurodegenerative Diseases -- {{A}} Systematic Review},
  author = {Albrecht, Franziska and Kvist, Alexander and Franz{\'e}n, Erika},
